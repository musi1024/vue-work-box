{
  "name": "vue-work-box",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm run lint && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "temp": "npm run build && charon publish temp",
    "test": "npm run build && charon publish test",
    "prod": "cross-env VUE_APP_CDN=true VUE_APP_VCONSOLE=false npm run build && charon publish prod",
    "release-f": "standard-version -f",
    "release-major": "standard-version -r major",
    "release-minor": "standard-version -r minor",
    "release-patch": "standard-version -r patch"
  },
  "dependencies": {
    "async-validator": "^3.2.2",
    "axios": "^0.19.1",
    "axios-mock-adapter": "^1.17.0",
    "core-js": "^3.4.3",
    "cross-env": "^6.0.3",
    "normalize.css": "^8.0.1",
    "url-parse": "^1.5.8",
    "vconsole": "^3.3.4",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-service": "^4.1.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "sass": "^1.23.7",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
